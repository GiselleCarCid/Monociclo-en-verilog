
//	Encabezado

module extensiondesigno 
	parameter			IMM = 20

);

(
	//la entrada es la salida de la cache de instrucciones (fetch)
	
	input				[31:0] instruccion_i;
	output			[31:0] inmediato_o
);
	wire				[6:0]	  opcode_w;
	assign						opcode_w = instruccion_i[6:0]
	
	
	always @(*)
	begin
		case ()
			7'b0010011: 			//Tipo I
						inmediato_o = {{IMM{instruccion_i[31]}},instruccion_i[31:20]}  //Concatenar el bit 31 es el inmediato, replique
			default: 
						inmediato_o = 32'b0;
		endcase
	end
endmodule 